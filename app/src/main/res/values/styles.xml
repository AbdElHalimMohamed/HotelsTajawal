<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:textColorPrimary">@color/text_white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/text_white</item>
    </style>

    <style name="TextBig">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextMedium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextSmall">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextMedium.White" parent="TextMedium">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="TextMedium.Primary" parent="TextMedium">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextMedium.Secondary" parent="TextMedium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextMedium.White.OnLine" parent="TextMedium.White">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="TextBig.Primary" parent="TextBig">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="ButtonWithoutBG" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
